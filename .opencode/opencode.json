{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "aigateway": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "VIER AI Gateway",
      "options": {
        "baseURL": "https://aigateway.eu/core/v1"
      },
      "models": {
        "code---anthropic-claude-haiku": {
          "name": "Anthropic Claude Haiku",
          "limit": {
            "context": 200000,
            "output": 64000
          }
